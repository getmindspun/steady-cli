{
    "name": "steady-cli",
    "version": "2.1.1",
    "description": "CLI for maintaining Ghost sites",
    "main": "index.js",
    "engines": {
        "node": ">=10.20.1"
    },
    "bin": {
        "steady": "./index.js",
        "steady-cli": "./index.js"
    },
    "scripts": {
        "test": "jest --verbose",
        "lint": "eslint --fix *.js utils commands tests",
        "test:coverage": "jest --coverage",
        "test:badges": "npm run test:coverage  && make-coverage-badge --output-path ./badges/coverage.svg"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mindspun/steady-cli.git"
    },
    "keywords": [
        "ghost",
        "mindspun",
        "steady",
        "blog",
        "cms",
        "theme",
        "cli"
    ],
    "author": "mindspun@mindspun.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mindspun/steady-cli/issues"
    },
    "homepage": "https://github.com/mindspun/steady-cli",
    "dependencies": {
        "@tryghost/admin-api": "^1.3.7",
        "axios": "^0.21.1",
        "bl": "^4.0.3",
        "cosmiconfig": "^7.0.0",
        "decompress": "^4.2.1",
        "dotenv": "^8.2.0",
        "download": "^8.0.0",
        "execa": "^4.0.3",
        "form-data": "^3.0.0",
        "ghost-cli": "^1.15.3",
        "lodash": "^4.17.20",
        "better-sqlite3": "^7.1.2",
        "xml2js": "^0.4.23",
        "yargs": "^15.4.1",
        "yarn": "^1.22.4"
    },
    "devDependencies": {
        "eslint": "^7.18.0",
        "eslint-plugin-ghost": "^1.4.1",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.4.2",
        "make-coverage-badge": "^1.2.0",
        "rimraf": "^3.0.2"
    },
    "jest": {
        "coverageReporters": [
            "text",
            "json-summary"
        ],
        "moduleDirectories": [
            "node_modules",
            "."
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ]
    }
}
